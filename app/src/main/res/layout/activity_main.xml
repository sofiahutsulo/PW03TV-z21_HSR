<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Практична робота 3"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мобільний калькулятор розрахунку прибутку від сонячних електростанцій з системою прогнозування сонячної потужності"
            android:layout_marginBottom="16dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вхідні дані"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pc, МВт (встановлена потужність СЕС)" />

        <EditText
            android:id="@+id/editPower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Напр., 5.0"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B, грн/МВт·год (тариф / ціна електроенергії)" />

        <EditText
            android:id="@+id/editPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Напр., 1500"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T, год (тривалість розрахункового періоду)" />

        <EditText
            android:id="@+id/editHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="24"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="σ₁, МВт (стандартне відхилення похибки прогнозу ДО покращення)" />

        <EditText
            android:id="@+id/editSigma1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Напр., 0.5"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="σ₂, МВт (стандартне відхилення похибки прогнозу ПІСЛЯ покращення)" />

        <EditText
            android:id="@+id/editSigma2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Напр., 0.25"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonCalcPr3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Розрахувати (ПР3)" />

        <TextView
            android:id="@+id/textResultPr3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Результат ПР3 буде тут"
            android:textIsSelectable="true" />

    </LinearLayout>

</ScrollView>
